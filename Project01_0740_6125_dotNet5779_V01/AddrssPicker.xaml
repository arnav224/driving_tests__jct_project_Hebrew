<UserControl x:Class="PLWPF.UserControls.AddressPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF.UserControls"
             mc:Ignorable="d" LostFocus="UserControl_LostFocus" 
            >
    <StackPanel MinWidth="115" MaxWidth="150" ZIndex="0" FlowDirection="RightToLeft">
        <TextBox x:Name="TexBoxAddress" HorizontalAlignment="Stretch" TextChanged="TexBoxAddress_TextChanged" MaxWidth="150"/>
        <ListBox x:Name="ListBoxSuggestions" Height="120" Visibility="Collapsed" SelectionChanged="ListBoxSuggestions_SelectionChanged"></ListBox>
    </StackPanel>
</UserControl>
